<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Back <%= link_to @reward.project.title, project_path(@reward.project)%></span>
        <p><%= @reward.price %></p>
      </div>
      <div class="card-action">
        <%= link_to "Cancel", project_path(@reward.project) %>
        <%= button_to "Confirm Pledge", payments_path, params: {reward_id: @reward.id}, class: "waves-effect waves-light btn"%>
      </div>
    </div>
  </div>
</div>
