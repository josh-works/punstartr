<h3>Text Message Confirmation</h3>

<div class="Confirm_form_container">
  <%= form_tag sessions_path, method: :post do %>
    <div class="field">
      <%= label_tag "Confirmation Code" %>
      <%= text_field_tag :confirmation, nil, required: true %>
    </div>
      <%= hidden_field_tag :email, @email %>
      <%= hidden_field_tag :password, @password %>
  <%= submit_tag "Log In" %>
  <% end %>
</div>
